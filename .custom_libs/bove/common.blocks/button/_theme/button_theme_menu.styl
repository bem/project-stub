@import "../../../node_modules/sharps/common.blocks/mq/mq.post.css"
.menu .menu__button {
    font-size: 0
    line-height: 0
    margin 0
    padding 0 15px
    display: block
    position: relative
    box-sizing: border-box
    outline: none
    -webkit-tap-highlight-color: transparent
    transition: .3s
    height 55px
    width: 122px
    
    &:after {
        width: 100%
        height: 2px
        background-color: #68bdf8
        position: absolute
        bottom: 0
        left: 0
        content: ''
        transition: .4s
        transform: scale3d(0, 1, 1)
        backface-visibility: hidden
        z-index: -1
    }
    
    &:before {
        width: 100%
        height: 0
        background-color: #f0f8fe
        position: absolute
        top: 0
        left: 0
        content: ''
        transition: .4s
        z-index: -2
        backface-visibility: hidden
    }
    
    & strong {
        display: inline-block
        vertical-align: middle
        font: 22px "Russia", sans-serif
        color: #333
        margin-left: 12px
        transition: .3s
    }
    
    & span {
        width: 100%
        display: block
        position: absolute
        height: 2px
        background: #333
        transition: .3s
    }
    
    & span:nth-of-type(1) {
        top: 0
        left: 0
    }
    
    & span:nth-of-type(2) {
        bottom: 0
        left: 0
    }
    &.button_hovered {
        
        &::before {
            height: 100%
        }
        
        &::after {
            transform: scale3d(1, 1, 1)
        }
    }
    &.button_focused {
        &::before {
            height: 100%
        }
        &::after {
            transform: scale3d(1, 1, 1)
        }
    }
}

.menu__button b {
    font-size: 0
    line-height: 0
    width: 22px
    height: 15px
    display: inline-block
    vertical-align: middle
    position: relative
    transition: .3s
    
    &:after {
        position: absolute
        content: ''
        width: 100%
        height: 2px
        background: #333
        left: 0
        top: 50%
        transition: .3s
        backface-visibility: hidden
        margin-top: -1px
    }
    
    &:before {
        position: absolute
        content: ''
        width: 100%
        backface-visibility: hidden
        height: 2px
        background: #333
        left: 0
        top: 50%
        transition: .3s
        margin-top: -1px
    }
    
}

.menu__button.button_checked {
    border-color: transparent
    & span {
        background: #fff
    }
    & strong {
        color: #fff
    }
    &:after {
        transform: scale3d(1, 1, 1)
        height: 100%
    }
    & b:after {
        transform: rotate(45deg)
        background: #fff
    }
    & b:before {
        transform: rotate(-45deg)
        background: #fff
    }
    & span:nth-of-type(1) {
        transform: translateY(-10px)
        opacity: 0
    }
    & span:nth-of-type(2) {
        transform: translateY(10px)
        opacity: 0
    }
}
    

