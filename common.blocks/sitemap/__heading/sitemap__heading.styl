@import "../../../_bufer/mq.post.css"
.sitemap__heading {
    display flex
    flex-flow row wrap
    max-width 2048px
    margin-left auto
    margin-right auto
    border 2px solid #333
}

@media (--small-only) {
    .sitemap__heading {
    justify-content space-between
    border-top 0
    border-right 0
    border-bottom  2px solid #333
    border-left 0
    }
}

@media (--xsmall-only) {
    .sitemap__heading {
        justify-content space-between
        border-top 0
        border-right 0
        border-bottom  2px solid #333
        border-left 0
    }
}